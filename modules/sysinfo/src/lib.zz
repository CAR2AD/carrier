export fn sysinfo(slice::MutSlice mut*sl) {
    uname(sl);
    mem(sl);
    load(sl);
    firmware(sl);
    bootloader(sl);
}

export fn sensors(err::Err+et mut*e, slice::MutSlice mut*sl)
{
    os_sysinfo_sensors(e, et, sl);
}
