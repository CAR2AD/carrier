    assert(memcmp(pk.k, pk2.k, sizeof(pk.k)) == 0);

    secret_to_str(e, buf, static(len(buf)), &sk);
    if err::check(e) { return; }

    printf("%s\n", buf);

    new sk2 = secret_from_cstr(e, buf);
    if err::check(e) { return; }

    assert(memcmp(sk.k, sk2.k, sizeof(sk.k)) == 0);
