fn test_short(err::Err+et mut* e)
    where err::checked(*e)
{
    new sk = secret_generate(e);
    if err::check(e) { return; }

    Identity mut pk = {0};
    identity_from_secret(&pk, &sk);

    pk.k[0] = 0x00;
    pk.k[1] = 0x00;
    pk.k[2] = 0x00;
    pk.k[3] = 0x00;
    pk.k[4] = 0x00;
