fn test_alias(err::Err+et mut* e)
    where err::checked(*e)
{
    new sk = secret_generate(e);
    if err::check(e) { return; }

    Alias mut pk = {0};
    pk.k[4] = sk.k[0];
    pk.k[5] = sk.k[1];
    pk.k[6] = sk.k[2];
    pk.k[7] = sk.k[3];

    char mut buf[100] = {0};
    usize ll = alias_to_str(e, buf, static(len(buf)), &pk);
    static_attest(ll < len(buf));
    if err::check(e) { return; }

    for (usize mut i = 0; i < ll; i++) {
        printf("%c", buf[i]);
        if i % 4 == 0 {
            printf(" ");
        }
    }
    printf("\n", buf);

    new pk2 = alias_from_str(e, buf, ll);
    if err::check(e) { return; }
    assert(memcmp(pk.k, pk2.k, sizeof(pk.k)) == 0);
}

export fn main() -> int {
    new+1000 e = err::make();

    test_identity(&e);
    err::abort(&e);

    test_corrupt_identity(&e);
    err::abort(&e);

    test_address(&e);
    err::abort(&e);

    test_short(&e);
    err::abort(&e);

    test_alias(&e);
    err::abort(&e);

    return 0;
}
